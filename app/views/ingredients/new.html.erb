<%= render TurboModalComponent.new(title: "Добавление ингредиента") do %>
  <div class="mx-auto w-full max-w-[550px] bg-white">
    <%= form_with(model: Ingredient.new ,url: project_ingredients_path(@project), local: true) do |form| %>
      <div class="field mb-5">
        <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_field :name, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
      </div>

      <div class="field mb-5">
        <%= form.label :description, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :description, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
      </div>

      <div class="field mb-5">
        <%= form.label :image, class: 'block text-sm font-medium text-gray-700' %>
        <%= form.file_field :image, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
      </div>

      <div class="actions">
        <%= form.submit "Добавить ингредиент", class: 'hover:shadow-form w-full rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none' %>
      </div>
    <% end %>
  </div>
<% end %>