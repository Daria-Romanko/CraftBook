<div id="info_recipe" class="flex w-full mb-6">
  <div class="w-1/3 mr-4">  
    <div class="p-2 flex justify-center">
      <div class="flex items-center justify-center w-full h-32 bg-gray-200 rounded-md">
        <% if @recipe.image.attached? %>
          <%= image_tag @recipe.image, class: "object-cover w-full h-full rounded-md" %>
        <% else %>
          <span class="text-4xl font-bold text-gray-600"><%= @recipe.name[0..1].upcase %></span>
        <% end %>
      </div>  
    </div>
  </div>
  <div class="flex flex-col w-2/3"> 
    <div class="mb-8">
      <div class="flex items-center">
        <h2 class="text-3xl text-gray-800 sm:text-4xl flex-grow overflow-hidden">
          <span class="block font-extrabold tracking-tight mr-4 whitespace-nowrap overflow-hidden text-ellipsis">
            <%= @recipe.name %>
          </span>
        </h2>
      </div>
    </div>
    <div class="mb-2">
      <label class="block text-lg font-medium text-gray-700 mb-1">Описание:</label>
      <% if @recipe.description.present? %>
        <p class="text-gray-700" style="word-wrap: break-word; overflow-wrap: anywhere;"><%= @recipe.description %></p>
      <% else %>
        <p class="text-gray-500 italic">Описание отсутствует</p>
      <% end %>
    </div>
    
    <div class="mt-4">
      <%= link_to edit_project_recipe_path(@project, @recipe), data: { turbo_frame: 'modal' }, class:"text-blue-600 hover:text-blue-500 hover:bg-gray-100 rounded-md p-2 inline-flex items-center" do %>
        Изменить
        <svg class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>