<%= render TurboModalComponent.new(title: "Изменение рецепта") do %>            
  <%= form_with(model: @recipe, url: project_recipe_path(@project, @recipe), method: :patch, local: true) do |form| %>
  <div class="mb-5">
    <%= form.label :name,'Название', class: 'block text-lg font-medium text-gray-700' %>
    <%= form.text_field :name, id: 'recipe_name', required: true, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
  </div>

  <div class="field mb-5">
    <%= form.label :description,'Описание', class: 'block text-lg font-medium text-gray-700' %>
    <%= form.text_area :description, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
  </div>

  <div class="field mb-5">
    <%= form.label :image,'Изображение', class: 'block text-lg font-medium text-gray-700' %>
    <%= form.file_field :image, class: 'w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md' %>
  </div>

  <div>
    <%= form.submit 'Изменить', class: 'hover:shadow-form w-full rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none' %>
  </div>           
  <% end %>                      
<% end %>
