<div class="flex flex-col bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105 group">  <!-- Note the addition of 'group' -->
  <div class="absolute top-2 right-2 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
    <div class="relative rounded-full p-1 bg-white group-hover:bg-gray-100 transition-colors duration-200">
      <%= link_to delete_project_ingredient_path(@project, ingredient), data: { turbo_frame: "modal" }, class: "text-gray-500 hover:text-red-500" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
    </div>
  </div>

<%= link_to edit_project_ingredient_path(@project, ingredient), data: { turbo_frame: 'modal' }, class: "block h-full" do %>
    <div class="p-2 flex justify-center">
      <div class="flex items-center justify-center w-full h-32 bg-gray-200 rounded-md">
        <% if ingredient.image.attached? %>
          <%= image_tag ingredient.image, class: "object-cover w-full h-full rounded-md" %>
        <% else %>
          <span class="text-4xl font-bold text-gray-600"><%= ingredient.name[0..1].upcase %></span>
        <% end %>
      </div>
    </div>
    <div class="px-4 pb-3">
  <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white overflow-hidden text-ellipsis whitespace-nowrap">
    <%= ingredient.name %>
  </h5>
</div>
  <% end %>  
  </div>