<%= render 'shared/navbar' %>

<div class="w-full px-2 py-5 sm:px-2 lg:px-2">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-3xl text-gray-800 sm:text-4xl">
      <span class="block font-extrabold tracking-tight"><%= @project.name %></span>
    </h2>
  </div>
  
  <div class="flex items-center justify-start space-x-4">
    <button onclick="showSection('recipes')" class="bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500">Рецепты</button>
    <button onclick="showSection('ingredients')" class="bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500">Ингредиенты</button>
    <button onclick="showSection('tags')" class="bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500">Теги</button>
  </div>


  <div id="content">
    <div id="recipes" class="hidden">
    <h3 class="text-xl font-bold">Рецепты</h3>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-2 xl:gap-x-8">
       
        <div class="relative bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
            <a href="" class="block h-full">
                <div class="p-2 flex justify-center items-center h-full">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">+</span>
                </div>
                <div class="px-4 pb-3 text-center">
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                        Добавить рецепт
                    </h5>
                </div>
            </a>
        </div>

       
        <% @recipes.each do |recipe| %>
            <div class="flex flex-col bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
                <div class="p-2 flex justify-center">
                    <div class="flex items-center justify-center w-full h-32 bg-gray-200 rounded-md">
                        <span class="text-4xl font-bold text-gray-600"><%= recipe.name[0..1].upcase %></span>
                    </div>
                </div>

                <div class="px-4 pb-3">
                    <div>
                        <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                            <%= recipe.name %>
                        </h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
    
    <div id="ingredients" class="hidden">
    <h3 class="text-xl font-bold">Ингредиенты</h3>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
    
        <div class="relative bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
            <a href="<%= new_project_ingredient_path(@project) %>" class="block h-full">
                <div class="p-2 flex justify-center items-center h-full">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">+</span>
                </div>
                <div class="px-4 pb-3 text-center">
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                        Добавить ингредиент
                    </h5>
                </div>
            </a>
        </div>

        
       <% @ingredients.each do |ingredient| %>
  <div class="flex flex-col bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
    <div class="p-2 flex justify-center">
      <div class="flex items-center justify-center w-full h-32 bg-gray-200 rounded-md">
        <% if ingredient.image.attached? %>
          <%= image_tag ingredient.image, class: "object-cover w-full h-full rounded-md" %>
        <% else %>
          <span class="text-4xl font-bold text-gray-600"><%= ingredient.name[0..1].upcase %></span>
        <% end %>
      </div>
    </div>

    <div class="px-4 pb-3">
      <div>
        <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
          <%= ingredient.name %>
        </h5>
      </div>
    </div>
  </div>
<% end %>
    </div>
</div>



    <div id="tags" class="hidden">
    <h3 class="text-xl font-bold">Теги</h3>

    <div class="mt-6 grid grid-cols-6 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 xl:gap-x-8">
        
        <div class="relative bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
            <a href="" class="block h-full">
                <div class="p-2 flex justify-center items-center h-full">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">+</span>
                </div>
                <div class="px-4 pb-3 text-center">
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                        Добавить тег
                    </h5>
                </div>
            </a>
        </div>

        
        <% @tags.each do |tag| %>
            <div class="flex flex-col bg-white border rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 transform transition duration-500 hover:scale-105">
                <div class="p-2 flex justify-center">
                    <div class="flex items-center justify-center w-full h-32 bg-gray-200 rounded-md">
                        <span class="text-4xl font-bold text-gray-600"><%= tag.name[0..1].upcase %></span>
                    </div>
                </div>

                <div class="px-4 pb-3">
                    <div>
                        <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                            <%= tag.name %>
                        </h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

   

   <div id="logoutModalId" class="fixed hidden z-50 inset-0 bg-gray-900 bg-opacity-60 overflow-y-auto h-full w-full px-4">
    <div class="relative top-40 mx-auto shadow-xl rounded-md bg-white max-w-md">
        <div class="flex justify-end p-2">
            <button onclick="closeModalExitAc()" type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
        <div class="p-6 pt-0 text-center">
            <svg class="w-20 h-20 text-red-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-normal text-gray-500 mt-5 mb-6">Вы уверены, что хотите выйти из аккаунта?</h3>
            <div class="flex justify-center space-x-2">
                <%= button_to 'Да, я уверен', session_path, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-base inline-flex items-center px-3 py-2.5 text-center' %>
                <a href="#" onclick="closeModalExitAc()" class="text-gray-900 bg-white hover:bg-gray-100 focus:ring-4 focus:ring-cyan-200 border border-gray-200 font-medium inline-flex items-center rounded-lg text-base px-3 py-2.5 text-center">
                    Нет, отменить
                </a>
            </div>
        </div>
    </div>
</div>
</div>



<script>
  function showSection(section) {
    document.getElementById('recipes').classList.add('hidden');
    document.getElementById('ingredients').classList.add('hidden');
    document.getElementById('tags').classList.add('hidden');

    document.getElementById(section).classList.remove('hidden');
  }
</script>