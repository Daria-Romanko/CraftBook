<div id="project_<%= project.id %>">
  <div class="w-full mb-4 relative p-3 flex items-center border-b cursor-pointer hover:bg-gray-200" >
    <div class="flex items-center w-full" onclick="location.href='<%= project_path(project) %>';">
      <div class="ml-2 flex flex-col mb-4">
        <div class="leading-snug text-lg text-gray-900 font-bold"><%= project.name %></div>
      </div>
    </div>
    <div class="absolute right-0 top-1 justify-end">
      <%= link_to "✏️", edit_project_path(project), data: { turbo_frame: 'modal' }, class:"text-blue-600 hover:text-blue-500 mr-2"%>
      <%= link_to "❌", delete_project_path(project), data: { turbo_frame: 'modal' }, class:"text-blue-600 hover:text-blue-500 mr-2"%>
    </div>
  </div>
</div>    