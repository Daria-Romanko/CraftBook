<div id="project_<%= project.id %>" class="group relative">
  <div class="bg-white rounded-xl shadow-sm border border-stone-200 p-6 hover:shadow-md hover:border-amber-300 transition-all duration-200">
    <div class="flex flex-col h-full">
      <div class="flex-1 cursor-pointer" onclick="location.href='<%= project_path(project) %>';">
        <div class="flex items-start justify-between mb-4">
          <h3 class="text-xl font-bold text-stone-800 truncate">
            <%= project.name %>
          </h3>
        </div>
        <div class="mt-4">
          <div class="flex flex-wrap gap-3">
            <% if project.recipes.any? %>
              <div class="flex items-center text-stone-600">
                <svg class="w-4 h-4 mr-1 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                <span class="text-sm"><%= project.recipes.count %> рецептов</span>
              </div>
            <% end %>
            <% if project.ingredients.any? %>
              <div class="flex items-center text-stone-600">
                <svg class="w-4 h-4 mr-1 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                <span class="text-sm"><%= project.ingredients.count %> ингредиентов</span>
              </div>
            <% end %>
            <% if project.tags.any? %>
              <div class="flex items-center text-stone-600">
                <svg class="w-4 h-4 mr-1 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                <span class="text-sm"><%= project.tags.count %> тегов</span>
              </div>
            <% end %>
            <% if project.recipes.none? && project.ingredients.none? && project.tags.none? %>
              <div class="flex items-center text-stone-400">
                <span class="text-sm italic">Проект пока пуст</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-6 pt-4 border-t border-stone-100">
        <div class="flex items-center justify-between text-sm">
          <span class="text-stone-500 cursor-pointer" onclick="location.href='<%= project_path(project) %>';">
            Создан <%= project.created_at.strftime("%d.%m.%Y") %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute right-4 top-4 opacity-0 group-hover:opacity-100 transition-opacity z-10">
    <div class="flex space-x-2">
      <%= link_to edit_project_path(project),
          data: { turbo_frame: 'modal' },
          class: "p-2 text-stone-500 hover:text-amber-600 hover:bg-amber-50 rounded-md transition-colors bg-white shadow-sm border border-stone-200",
          title: "Редактировать" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>
      <%= link_to delete_project_path(project),
          data: { turbo_frame: 'modal' },
          class: "p-2 text-stone-500 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors bg-white shadow-sm border border-stone-200",
          title: "Удалить" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    </div>
  </div>
</div>