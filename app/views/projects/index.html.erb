<%= render 'shared/navbar' %>
<div class="w-full px-2 py-5 sm:px-2 lg:px-2">
    <div class="flex items-center justify-between">
        <h2 class="text-3xl text-gray-800 sm:text-4xl">
            <span class="block font-extrabold tracking-tight">Мои проекты</span>
        </h2>
        <div class="mt-8 flex lg:flex-shrink-0 lg:mt-0">
            <div class="inline-flex rounded-md shadow">
                <%= link_to "Добавить проект", new_project_path, data: { turbo_frame: 'modal' }, class:"bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500"%>
            </div>
        </div>
    </div>

    <div class="w-full mt-8">
      <% if @projects.empty? %>
        <div class="relative isolate overflow-hidden bg-white px-6 py-20 text-center">
          <h3 class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Тут пусто</h3> 
        </div>
      <% else %>
        <div id="projects">
          <%= render @projects %>  
        </div>
      <% end %>
    </div>
</div>
