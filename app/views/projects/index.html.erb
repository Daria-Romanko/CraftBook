<%= render 'shared/navbar' %>

<div class="pt-28 min-h-screen bg-stone-50 px-4 py-8 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-extrabold text-stone-800 sm:text-3xl">
          Мои проекты
        </h1>
        <p class="mt-2 text-stone-600">
          Все созданные вами системы крафта
        </p>
      </div>
      
      <% if @projects.any? %>
        <%= render "projects/add_project_button" %>
      <% else %>
        <div id="add_project_button"></div>
      <% end %>
    </div>

    <div class="w-full" id="empty_state_container">
      <% if @projects.empty? %>
        <%= render "projects/empty_state" %>
      <% end %>
    </div>

    <div class="w-full">
      <div id="projects" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <%= render @projects %>
      </div>
    </div>
  </div>
</div>