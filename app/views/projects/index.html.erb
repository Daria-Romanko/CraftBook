<div class="w-full px-2 py-5 sm:px-2 lg:px-2">
    <div class="flex items-center justify-between">
        <h2 class="text-3xl text-gray-800 sm:text-4xl">
            <span class="block font-extrabold tracking-tight">Мои проекты</span>
        </h2>
        <div class="mt-8 flex lg:flex-shrink-0 lg:mt-0">
            <div class="inline-flex rounded-md shadow">
                <a class="bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500"
                    href=<%= new_project_path %>>Добавить проект
                </a>
            </div>
        </div>
    </div>

    <div class="w-full mt-8">
    <% if @projects.empty? %>
        <div class="relative isolate overflow-hidden bg-white px-6 py-20 text-center">
            <h3 class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Тут пусто</h3> 
        </div>
    <% else %>
        <% @projects.each do |project| %>
            <div class="w-full mb-4 relative p-3 flex items-center border-b cursor-pointer hover:bg-gray-200" onclick="location.href='<%= project_path(project) %>';">
                <div class="flex items-center w-full">
                    <div class="ml-2 flex flex-col">
                        <div class="leading-snug text-lg text-gray-900 font-bold"><%= project.name %></div>
                    </div>
                </div>
                <div class="absolute right-0 top-1 justify-end">
                    <a href="<%= edit_project_path(project) %>" class="text-blue-600 hover:text-blue-500 mr-2">✏️</a>
                    <button class="text-red-600 hover:text-red-500" onclick="event.stopPropagation(); openModalD('modelConfirm<%= project.id %>')">❌</button>
                </div>
            </div>

          
            <div id="modelConfirm<%= project.id %>" class="fixed hidden z-50 inset-0 bg-gray-900 bg-opacity-60 overflow-y-auto h-full w-full px-4">
                <div class="relative top-40 mx-auto shadow-xl rounded-md bg-white max-w-md">
                    <div class="flex justify-end p-2">
                        <button onclick="closeModalD('modelConfirm<%= project.id %>')" type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="p-6 pt-0 text-center">
                        <svg class="w-20 h-20 text-red-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h3 class="text-xl font-normal text-gray-500 mt-5 mb-6">Вы уверены, что хотите удалить этот проект?</h3>
                        <div class="flex justify-center space-x-2">
                            <%= button_to 'Да, я уверен', project_path(project), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-base inline-flex items-center px-3 py-2.5 text-center' %>
                            <a href="#" onclick="closeModalD('modelConfirm<%= project.id %>')" class="text-gray-900 bg-white hover:bg-gray-100 focus:ring-4 focus:ring-cyan-200 border border-gray-200 font-medium inline-flex items-center rounded-lg text-base px-3 py-2.5 text-center">
                                Нет, отменить
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>



     <div id="logoutModalId" class="fixed hidden z-50 inset-0 bg-gray-900 bg-opacity-60 overflow-y-auto h-full w-full px-4">
    <div class="relative top-40 mx-auto shadow-xl rounded-md bg-white max-w-md">
        <div class="flex justify-end p-2">
            <button onclick="closeModalExitAc()" type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
        <div class="p-6 pt-0 text-center">
            <svg class="w-20 h-20 text-red-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-normal text-gray-500 mt-5 mb-6">Вы уверены, что хотите выйти из аккаунта?</h3>
            <div class="flex justify-center space-x-2">
                <%= button_to 'Да, я уверен', session_path, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-base inline-flex items-center px-3 py-2.5 text-center' %>
                <a href="#" onclick="closeModalExitAc()" class="text-gray-900 bg-white hover:bg-gray-100 focus:ring-4 focus:ring-cyan-200 border border-gray-200 font-medium inline-flex items-center rounded-lg text-base px-3 py-2.5 text-center">
                    Нет, отменить
                </a>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>



<script>

    window.openModalD = function(modalId) {
        document.getElementById(modalId).style.display = 'block';
        document.body.classList.add('overflow-y-hidden');
    }

    window.closeModalD = function(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.classList.remove('overflow-y-hidden');
    }

    function openModalExitAc() {
        document.getElementById('logoutModalId').classList.remove('hidden');
    }

    function closeModalExitAc() {
        document.getElementById('logoutModalId').classList.add('hidden');
    }
</script>