<div class="w-full px-4 py-32 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
        <h2 class="text-3xl text-gray-800 sm:text-4xl">
            <span class="block font-extrabold tracking-tight">Мои проекты</span>
        </h2>
        <div class="mt-8 flex lg:flex-shrink-0 lg:mt-0">
            <div class="inline-flex rounded-md shadow">
                <a class="bg-green-600 border border-transparent rounded-md py-4 px-6 inline-flex items-center justify-center text-lg font-medium text-white hover:bg-green-500"
                    href=<%= new_project_path %>>Добавить проект
                </a>
            </div>
        </div>
    </div>

    <div class="w-full mt-8">
        <% if @projects.empty? %>
          <div class="relative isolate overflow-hidden bg-white px-6 py-20 text-center">
            <h3 class="mx-auto max-w-2xl text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Тут пусто</h3> 
          </div>
        <% else %>
            <% @projects.each do |project| %>
                <div class="w-full mb-4 p-3 flex items-center justify-between border-b cursor-pointer hover:bg-gray-200" onclick="location.href='<%= project_path(project) %>';">
                    <div class="flex items-center">
                        <div class="ml-2 flex flex-col">
                            <div class="leading-snug text-lg text-gray-900 font-bold"><%= project.name %></div> <!-- Increased font size -->
                        </div>
                    </div>        
                </div>
            <% end %>
        <% end %>
    </div>
</div>

